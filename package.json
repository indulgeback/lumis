{
    "name": "lumis",
    "version": "1.0.0-beta.3",
    "description": "Lumis - 媒体处理桌面应用",
    "author": {
        "name": "LeviLiu"
    },
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build && electron-builder",
        "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
        "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
        "build:linux": "vue-tsc --noEmit && vite build && electron-builder --linux",
        "preview": "vite preview",
        "electron:dev": "vite --mode electron",
        "electron:build": "vite build && electron-builder",
        "electron:build:publish": "vite build && electron-builder --publish always",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "format": "prettier --write src/",
        "test": "vitest --run",
        "test:watch": "vitest",
        "release": "standard-version"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "pinia": "^2.1.7",
        "vue": "^3.4.21",
        "vue-router": "^4.3.0",
        "vuetify": "^3.5.8"
    },
    "devDependencies": {
        "@types/node": "^20.11.28",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/test-utils": "^2.4.5",
        "electron": "^29.1.4",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^9.23.0",
        "fast-check": "^3.17.0",
        "jsdom": "^24.0.0",
        "prettier": "^3.2.5",
        "sass": "^1.72.0",
        "typescript": "^5.4.2",
        "vite": "^5.2.0",
        "vite-plugin-electron": "^0.28.4",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vite-plugin-vuetify": "^2.0.3",
        "vitest": "^1.4.0",
        "vue-tsc": "^2.0.6"
    },
    "packageManager": "pnpm@8.15.4",
    "engines": {
        "node": ">=18.0.0"
    },
    "build": {
        "appId": "com.lumis.app",
        "productName": "Lumis",
        "directories": {
            "output": "release",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "package.json"
        ],
        "publish": {
            "provider": "github"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "public.app-category.graphics-design",
            "icon": "build/icon.icns",
            "sign": null
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Graphics",
            "icon": "build/icon.png",
            "maintainer": "Lumis",
            "vendor": "Lumis",
            "synopsis": "Media processing desktop application",
            "description": "Lumis is a cross-platform media processing desktop application"
        },
        "nsis": {
            "oneClick": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "perMachine": false
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 180
                },
                {
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 280,
                    "type": "file",
                    "path": "build/MACOS_README.txt"
                }
            ]
        }
    }
}